name: Claude Test Workflow

on:
  issues:
    types: [opened, edited]
  issue_comment:
    types: [created, edited]

permissions:
  contents: read
  issues: write
  pull-requests: read

jobs:
  claude-response:
    runs-on: ubuntu-latest
    if: contains(github.event.comment.body, '@claude') || contains(github.event.issue.body, '@claude')
    steps:
      - name: Respond to Claude mention
        run: |
          echo "Claude mention detected!"
          echo "Issue: ${{ github.event.issue.title }}"
          echo "Comment: ${{ github.event.comment.body }}"
          echo "Event: ${{ github.event_name }}"
      
      - name: Post response
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: 'ðŸ¤– Claude GitHub Action Test Response\n\nDetected @claude mention at ' + new Date().toISOString()
            });